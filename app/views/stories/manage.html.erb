<p style="color: green"><%= notice %></p>

<h1 class="header">Manage your shows</h1>
<div class="buttons">
  <%= link_to "New story", new_story_path, class:"button-1" %>
  <%= link_to "Back to home page", root_path, class:"button-1" %>
</div>
<div id="stories">
  <% @stories.each do |story| %>
    <div class="stories">
      <%= link_to story.title, story, style:"background-image: url('/assets/#{story.title}.jpg');", class:"button-3" %>
    </div>
  <% end %>
</div>


